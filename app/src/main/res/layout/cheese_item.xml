<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_image_height"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:contentDescription="@string/queso"
        app:srcCompat="@drawable/feta" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="@dimen/item_name_padding_start"
        android:paddingBottom="@dimen/item_name_padding_bottom"
        android:textSize="@dimen/item_name_text_size" />

    <Button
        android:id="@+id/item_button"
        style="?attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_bottom_margin_end"
        android:layout_marginStart="@dimen/item_bottom_margin_end"
        android:minWidth="@dimen/item_button_size"
        android:padding="@dimen/item_bottom_padding"
        android:textColor="@color/colorAccent"
        android:text="@string/enviar" />

</LinearLayout>